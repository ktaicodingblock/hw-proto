{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "module": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*"]
}
